<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rest_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.jasim.plateup.registration.RestReg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:id="@+id/back_button"
                    android:background="@drawable/ic_keyboard_backspace_white_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin">

                    <TextView
                        android:text="Opening hours"
                        android:textColor="#FFF"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:id="@+id/linearLayout3"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="Open"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"/>


                                <TextView
                                    android:text="Close"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/from_day"
                                    android:layout_weight="1" />


                                <TextView
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"/>

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/to_day"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="HH"/>
                                    <Spinner
                                        style="@style/SpinnerAsEditText"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:inputType="time"
                                        android:id="@+id/open_h" />

                                </LinearLayout>

                                <TextView
                                    android:layout_gravity="bottom"
                                    android:text="."
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="MM"/>
                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="time"
                                    android:id="@+id/open_m"
                                    android:layout_weight="1"/>
                                </LinearLayout>

                                <TextView
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:gravity="center"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="HH"/>
                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:id="@+id/close_h"
                                    android:layout_weight="1"/>
                                    </LinearLayout>

                                <TextView
                                    android:layout_gravity="bottom"
                                    android:text="."
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="MM"/>
                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="time"
                                    android:id="@+id/close_m"
                                    android:layout_weight="1"/>
                                    </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/second_opening"
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="Open"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"/>


                                <TextView
                                    android:text="Close"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/from_day2"
                                    android:layout_weight="1" />


                                <TextView
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"/>

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/to_day2"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/open_h2"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text=":"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/open_m2"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:gravity="center"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/close_h2"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text=":"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/close_m2"
                                    android:layout_weight="1"/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="20dp"
                        android:id="@+id/third_opening"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/activity_horizontal_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="Open"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"/>


                                <TextView
                                    android:text="Close"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="70dp"
                                    android:fontFamily="sans-serif"
                                    android:textColor="#FFF"
                                    android:layout_weight="1"/>
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/from_day3"
                                    android:layout_weight="1" />


                                <TextView
                                    android:gravity="center"
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"/>

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/to_day3"
                                    android:layout_weight="1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/open_h3"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text=":"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/open_m3"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text="-"
                                    android:textSize="25dp"
                                    android:gravity="center"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:id="@+id/close_h3"
                                    android:layout_weight="1"/>

                                <TextView
                                    android:text=":"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <Spinner
                                    style="@style/SpinnerAsEditText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:inputType="time"
                                    android:id="@+id/close_m3"
                                    android:layout_weight="1"/>

                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="60dp">
                    <Button

                        android:text="+"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_opening" />

                    <Button
                        android:text="-"
                        android:layout_width="59dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/remove_opening" />
                    </LinearLayout>


                </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">


        <Button
            android:id="@+id/next_button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:text="Next"
            android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>
