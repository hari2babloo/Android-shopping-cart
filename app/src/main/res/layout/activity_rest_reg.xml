<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_reg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jasim.plateup.registration.UserReg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <Button
                android:layout_margin="10dp"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:id="@+id/back_button"
                android:background="@drawable/ic_keyboard_backspace_white_24dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="25dp"
                    android:textColor="#FFF"
                    android:gravity="center"

                    android:id="@+id/textView4" />

                <EditText
                    android:text="Spise"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/restname_field"
                    android:hint="Restaurant name" />

                <EditText
                    android:text="1@2.no"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:fontFamily="sans-serif"
                    android:ems="10"
                    android:id="@+id/email_field"
                    android:hint="Email" />

                <EditText
                    android:text="erdude12"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="sans-serif"
                    android:ems="10"
                    android:id="@+id/password_field"
                    android:hint="Password" />

                <EditText
                    android:text="erdude12"
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:fontFamily="sans"
                    android:ems="10"
                    android:id="@+id/repeat_field"
                    android:hint="Repeat password" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="26dp">

                    <TextView
                        android:text="Category"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif"
                        android:id="@+id/textView11"
                        android:layout_marginLeft="5dp"
                        android:layout_alignBottom="@+id/category_field"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="19dp" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/category_field"
                        android:prompt="@string/category"
                        android:layout_below="@+id/linearLayout4"
                        android:layout_alignParentStart="true"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">


    <Button
        android:id="@+id/next_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:text="Next"
        android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>

